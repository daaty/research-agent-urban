{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/app-monitoring.ts",
    "src/app-simple.ts",
    "src/services/monitoringService.ts",
    "src/scraper/ridesScrapingSimple.ts",
    "src/config/index.ts",
    "src/types/index.ts",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.ts",
    "src/api/ridesController.ts",
    "src/api/scrapeController.ts",
    "src/api/tableScrapingController.ts",
    "src/scraper/ridesAngularLogin.ts",
    "src/scraper/ridesDebug.ts",
    "src/scraper/ridesDebugLogin.ts",
    "src/scraper/ridesDirectLogin.ts",
    "src/scraper/ridesScraper.ts",
    "src/scraper/ridesScraperNew.ts"
  ]
}
